<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MaterialDesign" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">?ollColor_600</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">?ollColor_100</item>
        <item name="colorOnPrimaryContainer">?ollColor_900</item>
        <item name="colorPrimaryInverse">?ollColor_200</item>
        <item name="colorSecondary">?ollColor_600</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">?ollColor_100</item>
        <item name="colorOnSecondaryContainer">?ollColor_900</item>
        <item name="colorTertiary">?ollColor_200</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorTertiaryContainer">?ollColor_100</item>
        <item name="colorOnTertiaryContainer">?ollColor_900</item>
        <item name="colorOnSurface">?ollColor_900</item>


        <item name="bottomAppBarStyle">@style/myBottomAppBarStyle</item>
        <item name="circularProgressIndicatorStyle">@style/myCircularProgressBar</item>
        <item name="textInputStyle">@style/AppTextField</item>
        <item name="bottomNavigationStyle">@style/myBottomNavigationView</item>


    </style>
    <style name="myBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="backgroundTint">?ollColor_200</item>

    </style>


    <style name="myBottomAppBarStyle" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="backgroundTint">?ollColor_900</item>
        <item name="indicatorInset">@dimen/size_indicatorInset</item>
    </style>

    <style name="myCircularProgressBar" parent="Widget.MaterialComponents.LinearProgressIndicator">
        <item name="indicatorColor">@color/red_800</item>
    </style>

    <style name="AppTextField"  parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="shapeAppearance">?shapeAppearanceMediumComponent</item>
    </style>


</resources>